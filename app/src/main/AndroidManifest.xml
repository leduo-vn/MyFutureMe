<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.amiele.myfutureme">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.main.summary.SummaryActivity"
            android:label="@string/title_activity_summary"></activity>
        <activity
            android:name=".activities.main.goal.tag.AddTagActivity"
            android:label="@string/title_activity_tag_update"/>
        <activity
            android:name=".activities.main.goal.task.UpdateTaskActivity"
            android:label="@string/title_activity_task_update"/>
        <activity android:name=".activities.main.motivation.MotivationActivity"
            />
        <activity android:name=".activities.main.goal.AddGoalActivity"
            android:label="@string/title_activity_add_goal"/>
        <activity
            android:name=".activities.main.goal.GoalActivity"
            android:label="@string/title_activity_main"/>
        <activity
            android:name=".activities.authentication.register.RegisterActivity"
            android:label="@string/title_activity_register" />
        <activity
            android:name=".activities.authentication.login.LoginActivity"
            android:label="@string/title_activity_login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>