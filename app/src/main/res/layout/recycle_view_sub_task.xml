<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/sub_task_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/txt_et_sub_task_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sub_task_recycle_view_tv_dow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sun, 20/01"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/sub_task_recycle_view_tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020"
                android:textSize="12sp" />
        </LinearLayout>



            <TextView
                android:id="@+id/sub_task_recycle_view_tv_minute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/rounded_blue_button"
                android:gravity="center"
                android:padding="5dp"
                android:layout_weight="2"

                android:text="Hour" />


        <TextView
            android:id="@+id/sub_task_recycle_view_tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SubTask Description" />

        <ImageButton
            android:id="@+id/action_delete_sub_task"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:contentDescription="image"
            android:padding="5dp"
            android:scaleType="fitCenter"
            app:srcCompat="@android:drawable/ic_menu_delete" />



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="13dp"
        android:background="#9788BE"
        app:layout_constraintTop_toBottomOf="@+id/sub_task_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
     />
</androidx.constraintlayout.widget.ConstraintLayout>

